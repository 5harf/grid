{
  "frameworks": [
    "browserify",
    "jasmine"
  ],
  "basePath": "",
  "files": [
    "node_modules/polyfill-function-prototype-bind/bind.js",
    "bower_components/angular/angular.js",
    "bower_components/angular-mocks/angular-mocks.js",
    "src/modules/grid-spec-helper/matchers.js",
    "src/**/*.spec.js"
  ],
  "browserify": {
    "debug": true
  },
  "preprocessors": {
    "src/**/*.spec.js": "browserify",
    "src/modules/grid-spec-helper/matchers.js": "browserify"
  },
  "autoWatch": true,
  "reporters": [
    "progress",
    "coverage"
  ],
  "browsers": ["PhantomJS_custom"],
  "customLaunchers": {
      "PhantomJS_custom": {
          "base": "PhantomJS",
          "options": {
              "viewportSize": {
                  "width": 400,
                  "height": 500
              }
          }
      }
  },
  "junitReporter": {
    "outputFile": "test_out/unit.xml",
    "suite": "unit"
  },
  "notifyReporter": {
    "reportSuccess": false
  },
  "browserNoActivityTimeout": 3000000,
  "reportSlowerThan": 250
}
